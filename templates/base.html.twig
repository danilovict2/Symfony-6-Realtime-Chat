<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-left: 10px;">
			<a class="navbar-brand" href="#">ChatApp</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNavDropdown">
				<ul class="navbar-nav">
					<li class="nav-item dropdown" style="margin-left: 90rem;">
						{% if is_granted("ROLE_USER") %}
							<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								{{ app.user }}
							</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
								</li>
							</ul>
						{% else %}
							<a href="{{ path('app_login') }}" class="btn btn-default">Login</a>
							<a href="{{ path('app_register') }}" class="btn btn-default">Register</a>
						{% endif %}
					</li>
				</ul>
			</div>
		</nav>

		{% block body %}{% endblock %}

		<hr>
		<div class="container d-flex justify-content-center align-items-center">
			<p>Copyright danilovict2 - All rights reseved</p>
		</div>

		{% block javascripts %}
			<script src="https://js.pusher.com/7.2/pusher.min.js"></script>
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
